<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommonAgentDesktop.App.Controls.MenuItem"
       xmlns:converters="clr-namespace:CommonAgentDesktop.App.Converters"
        Padding="0" Margin="0" CornerRadius="0" BackgroundColor="Transparent">
    <Frame.Resources>
        <ResourceDictionary>
            <converters:IsCollapsedToItemVisibleConverter x:Key="IsCollapsedToItemVisibleConverter" />
        </ResourceDictionary>
    </Frame.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="44" />
        </Grid.ColumnDefinitions>
        <Image x:Name="MenuImg" Grid.Column="1" Aspect="Center"/>
        <Label x:Name="MenuLabel" Grid.Column="3" HorizontalOptions="Start"  VerticalOptions="Center" FontSize="14"
           IsVisible="{Binding IsWidgetCollapsed, Converter={StaticResource IsCollapsedToItemVisibleConverter}}"/>
    </Grid>
</Frame>